{
  "name": "@cantabile/hooks",
  "version": "1.1.4",
  "description": "React hooks snippets for modern React (18 & 19)",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "packageManager": "bun@1.3.0",
  "author": "Wallop Opasakhun (https://github.com/champclarinet)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ChampClarinet/hooks.git"
  },
  "bugs": {
    "url": "https://github.com/ChampClarinet/hooks/issues"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/ChampClarinet/hooks#readme",
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "bun build src/index.ts --outdir dist --target=node --format=esm --sourcemap --outfile=index.mjs",
    "build:cjs": "bun build src/index.ts --outdir dist --target=node --format=cjs --sourcemap --outfile=index.cjs",
    "build:types": "tsc -p tsconfig.build.json",
    "build": "bun run clean && bun run build:esm && bun run build:cjs && bun run build:types",
    "test": "bun test",
    "prepublishOnly": "bun run build",
    "commit": "cz",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "bun-types": "latest",
    "commitizen": "^4.3.1",
    "commitlint": "^20.1.0",
    "commitlint-config-gitmoji": "^2.3.1",
    "cz-customizable": "^7.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.7.0",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@cantabile/date-helper": "latest",
    "axios": "^1.6.7",
    "react": "^18.2.0 || ^19.0.0",
    "react-router-dom": "^6.26.2"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./cz.config.cjs"
    }
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.0"
  }
}
