#!/bin/sh

branch_name=$(git symbolic-ref --short HEAD)

# âŒ Block direct commits to main
if [ "$branch_name" = "main" ]; then
  echo "âŒ Direct commits to main are not allowed. Please commit to release/* or hotfix/* branches and create a Pull Request."
  exit 1
fi

# âœ… Enforce lint on protected branches
if echo "$branch_name" | grep -Eq '^(main|develop|release/.*|hotfix/.*|deploy-to-[^-]+-server)$'; then
  echo "ğŸ” Running bun format before committing to $branch_name..."
  if ! bun format; then
    echo "âŒ Formatting failed. Commit blocked."
    exit 1
  fi
else
  echo "âœ… Skipping formating: $branch_name is not protected."
fi

# âœ… Run lint-staged
npx lint-staged
exit 0
