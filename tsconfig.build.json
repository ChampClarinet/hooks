{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "target": "ES2020",
    "module": "esnext",
    "types": ["bun-types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "**/__tests__/**"]
}
